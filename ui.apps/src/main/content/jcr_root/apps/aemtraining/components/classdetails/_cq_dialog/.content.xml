<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Class Details Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <ClassName
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        emptyText="Enter the class Name"
                        fieldLabel="Class Name"
                        name="./className"
                        required="{Boolean}true"/>
                    <select
                        granite:class="cq-dialog-dropdown-showhide"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Choose "
                        name="./selectValue">
                        <items jcr:primaryType="nt:unstructured">
                            <Student
                                jcr:primaryType="nt:unstructured"
                                text="Student "
                                value="valueStudent"/>
                            <Teacher
                                jcr:primaryType="nt:unstructured"
                                text="Teacher "
                                value="valueTeacher"/>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            cq-dialog-dropdown-showhide-target=".showhidetargets"/>
                    </select>
                    <Student
                        granite:class="showhidetargets"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <StudentName
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter the Student Name"
                                fieldLabel="Student Name"
                                name="./studentName"
                                required="{Boolean}true"/>
                            <StudentImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    fieldLabel="image upload"
                                    fileReferenceParameter="./fileReferenceStudent"
                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                    name="./studentImage"/>
                            <Rollno
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter the Roll Number"
                                fieldLabel="Roll Number"
                                name="./rollNumber"
                                required="{Boolean}true"/>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="valueStudent"/>
                    </Student>
                    <Teacher
                        granite:class="showhidetargets"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <TeachertName
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter the Teacher Name"
                                fieldLabel="Teacher Name"
                                name="./teacherName"
                                required="{Boolean}true"/>
                            <image
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    fieldLabel="image upload"
                                    fileReferenceParameter="./fileReferenceTeacher"
                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                    name="./teacherImage"/>
                            <Subject
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter the Subject"
                                fieldLabel="Subject "
                                name="./subject"
                                required="{Boolean}true"/>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhidetargetvalue="valueTeacher"/>
                    </Teacher>
                </items>
            </container>
        </items>
    </content>
</jcr:root>
